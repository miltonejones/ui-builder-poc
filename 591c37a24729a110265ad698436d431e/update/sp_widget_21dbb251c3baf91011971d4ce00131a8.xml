        <template><![CDATA[  <div ng-if="page.matches('new misc billing')">
    <h2>New Miscellaneous Billing</h2>

    <div class="misc-billing-search-form">
      <label class="form-label"
        >Create a new miscellaneous billing by searching for a new
        account</label
      >
      <input
        class="form-control"
        ng-change="page.findAccount(accountParam)"
        ng-model="accountParam"
        placeholder="Search for an account name or account number"
      />
    </div>

    <div class="distant" ng-if="page.machine.context.accountList.length">
      <h4>Search results for "{{accountParam}}"</h4>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Account Name</th>
            <th scope="col">Account Id</th>
            <th scope="col">Brand</th>
            <th scope="col">Branch Name</th>
          </tr>
        </thead>
        <tbody>
          <tr ng-repeat="account in page.machine.context.visible">
            <td
              scope="row"
              ng-click="page.send({type: 'create', value: account.sys_id})"
            >
              <a href="#">{{account.account_name}}</a>
            </td>
            <td>{{account.account_id}}</td>
            <td>{{account.brand_name}}</td>
            <td>{{account.branch_name}}</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
]]></template>
