<?xml version="1.0" encoding="UTF-8"?><record_update table="sp_angular_provider">
    <sp_angular_provider action="INSERT_OR_UPDATE">
        <name>uxCustomInput</name>
        <script><![CDATA[function uxCustomInput() {
  return {    
	restrict: 'E',
    scope: {
      state: '=',
      place: '=',
      value: '=',
      text: '='
    },
    template: '<div>' +
                '<input ng-if="place === \'none\'"' +
                       'ng-value="value"' +
                       'ng-disabled="state === \'disabled\'"' +
                       'placeholder="Label"' +
                       'ng-class="{ focus: state === \'focus\', invalid: state === \'error\' }"' +
                       'class="form-control" />' +
                '<div ng-if="place !== \'none\'"' +
                     'class="input-group"' +
                     'ng-class="{ right: place === \'right\', left: place === \'left\', invalid: state === \'error\' }">' +
                  '<span class="input-group-addon" ng-if="place === \'left\'">' +
                    '<i class="glyphicon glyphicon-search"></i>' +
                  '</span>' +
                  '<input class="form-control"' +
                         'placeholder="Label"' +
                         'ng-disabled="state === \'disabled\'"' +
                         'ng-class="{ focus: state === \'focus\', invalid: state === \'error\' }"' +
                         'ng-value="value" />' +
                  '<span class="input-group-addon" ng-if="place === \'right\'">' +
                    '<i class="glyphicon glyphicon-search"></i>' +
                  '</span>' +
                '</div>' +
                '<small ng-if="!!text"' +
                       'ng-class="{ \'invalid-feedback\': state === \'error\', \'text-muted\': state !== \'error\' }">' +
                  '{{text}}' +
                '</small>' +
              '</div>'
  };  
}]]></script>
