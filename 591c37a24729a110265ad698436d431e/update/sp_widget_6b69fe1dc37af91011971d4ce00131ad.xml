        <template><![CDATA[  <div ng-if="page.matches('viewing landing page')">
    <div class="deduction-flex between">
      <h2>Miscellaneous Billing</h2>

      <button type="button" ng-click="page.send('create')" class="btn btn-primary">
        ADD NEW MISC. BILLING
      </button>
    </div>
    <div class="misc-billing-search-form">
      <input
        class="form-control"
        ng-change="page.findBilling(billingParam)"
        ng-model="billingParam"
        placeholder="Search for an Account or Account number"
      />
    </div>
    <h3>History</h3>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Misc Billing #</th>
          <th scope="col">Account Name</th>
          <th scope="col">Accounting Unit</th>
          <th scope="col">Created By</th>
          <th scope="col">Status</th>
        </tr>
      </thead>
      <tbody>
        <tr ng-repeat="item in page.machine.context.visible">
          <td scope="row">
            <a href="#" ng-click="page.send({ type: 'view', billing: item })">{{item.number}}</a>
          </td>
          <td>{{item.account_name}}</td>
          <td>{{item.accounting_unit}}</td>
          <td>{{item.sys_created_by}}</td>
          <td>{{item.status}}</td>
        </tr>
      </tbody>
    </table>
  </div>
]]></template>
