        <template><![CDATA[
    <div
    ng-if="page.can('page') && page.machine.context.recordCount > page.machine.context.pageSize"
    class="deduction-flex center"
  >
    <nav>
      <ul class="pagination">
        <li class="page-item">
          <a
            class="page-link"
            href="#"
            aria-label="Previous" 
          ng-click="page.send({
                  type: 'page',
                  pageNum: 1
                  })"
          >
            <span aria-hidden="true">&laquo;</span>
          </a>
        </li>
        <li
          class="page-item"
          ng-class="{'active': n === page.machine.context.currentPage}" 
          ng-repeat="n in page.machine.context.pages"
          ng-click="page.send({
                  type: 'page',
                  pageNum: n
                  })"
        >
          <a class="page-link" href="#">{{ n }}</a>
        </li>
        <li class="page-item">
          <a class="page-link" href="#" aria-label="Next">
            <span aria-hidden="true">&raquo;</span>
          </a>
        </li>
      </ul>
    </nav>
  </div> ]]></template>
