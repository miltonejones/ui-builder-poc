<?xml version="1.0" encoding="UTF-8"?><record_update table="sp_angular_provider">
    <sp_angular_provider action="INSERT_OR_UPDATE">
        <name>miscBillingEditor</name>
        <script><![CDATA[function miscBillingEditor() {
  return {
    restrict: 'E',
    replace: true,
	scope: {
		c: '=',
		config: '=',
		machine: '=',
	},
    template: 
      '<div>' +  
        '<h3 style="margin: 1rem">' + 
          'Edit Misc. Billing Item' +
        '</h3>' +         
        '<div class="account-grid">' +
          '<div ng-repeat="column in config.selectedAccountColumns">' +              
            '<div>' +
              '<div>{{column.value}} <sup ng-if="!column.optional">*</sup></div>' +
              
              '<div ng-if="c.matches([\'editing selected item\'])">' +
                '<select class="form-control"' +
                       'ng-if="!!column.select"' +
                       'ng-change="c.send({ type: \'change\', key: column.key })"' +  
                       'ng-model="machine.context.selectedAccount[column.key]" >' +
                  '<option value="">Select {{column.value}}</option>' +
                  '<option ng-repeat="opt in machine.context[column.select]"' +
                          'value="{{opt.value}}">{{opt.label}}</option>' +
                '</select>' +
                '<input class="form-control" ' +
                       'ng-if="!column.select"' +
                       'type="{{column.date ? \'date\' : \'text\'}}"' +
                       'ng-disabled="column.disabled"' +
                       'ng-blur="c.send({ type: \'change\', key: column.key })"' + 
                       'ng-model="machine.context.selectedAccount[column.key]" />' +
              '</div>' +               
              '<div ng-if="c.matches([\'confirm item save\'])">' +
                '{{machine.context.selectedAccount[column.key]}}' +
              '</div>' +            
            '</div>' +
          '</div>' +
        '</div> ' +
        '<div class="flexible" style="margin: 0px 1rem">' +
          '<div class="spacer">' +  
            '<!-- spacer -->' +
          '</div>' +
          '<button class="btn btn-default btn-sm ux" ng-click="c.send(\'back\')">' +
            'CANCEL' +
          '</button>' +
          '<button class="btn btn-primary btn-sm ux" ng-click="c.send(\'save\')">' +
           '{{c.matches([\'editing selected item\']) ? "UPDATE" : "SAVE"}}  ' +
          '</button>' +
        '</div>' +  
      '</div>'
  };
}]]></script>
